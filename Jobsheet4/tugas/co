        //         info += jual.getInfo(); //
        //     }
        // } else {
        //     info += "Belum ada riwayat terjual";
        // }
        
        // info += "\n";

        // return info;
    }

    // public void tambahJual(LocalDate tanggal, Karyawan sales){
